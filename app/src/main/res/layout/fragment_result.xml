<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bkg_custom_grad_lin_1"
    tools:context=".ResultFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_20"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_98"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_02"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_80"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_70"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_78"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_75"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim_vaiting"
        android:layout_width="270dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_anim_panda"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_please_vait_loading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_black"
        android:gravity="end"
        android:text="@string/citata_dumbldor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/lottie_anim_vaiting"
        app:layout_constraintStart_toStartOf="@id/lottie_anim_vaiting"
        app:layout_constraintTop_toBottomOf="@id/lottie_anim_vaiting"
        tools:visibility="gone" />


    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/tv_custom_2"
        android:fontFamily="@font/montserrat_black"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingTop="3dp"
        android:paddingEnd="4dp"
        android:paddingBottom="3dp"
        android:text="За допомогою магії ми віднайшли ідеальні варіанти для Вас"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_98"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_02"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_02" />

    <TextView
        android:id="@+id/tv_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="* Оберіть варіанти, які Ви хочете додати до замовлення"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_98"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_02"
        app:layout_constraintTop_toBottomOf="@id/tv_result_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/lin_for_rev_v"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_02"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_98"
        app:layout_constraintTop_toBottomOf="@id/tv_helper"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_75">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:foregroundGravity="center"
            android:gravity="center"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/single_item_goods" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <!--    <ScrollView-->
    <!--        android:id="@+id/scroll_view_main"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:orientation="vertical"-->
    <!--        android:visibility="gone"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        tools:visibility="visible">-->

    <androidx.constraintlayout.widget.Group
        android:id="@+id/res_scrn_main_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="lin_lay_btn_menu, lin_for_rev_v, tv_helper, tv_result_title"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lin_lay_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_98"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_98"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_02"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_78">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/lin_layout_sum_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_total_sum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="6"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="start"
                    android:text="Сума замовлення: "
                    android:textColor="@color/almost_black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_total_sum_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/montserrat_black"
                    android:gravity="bottom"
                    android:text="250₴"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/tv_custom"
                android:fontFamily="@font/montserrat_black"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="перейти до оформлення замовлення"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_go_to_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/go_to_site"
                android:textColor="@color/dark_dark_blue"
                android:textSize="12sp"
                app:layout_constraintDimensionRatio="1,10" />

            <TextView
                android:id="@+id/tv_restart_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/start_test_again"
                android:textAllCaps="true"
                android:textColor="@color/almost_black"
                android:textSize="12sp"
                app:layout_constraintDimensionRatio="1,10" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_restart_test_all"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_restart"
                app:layout_constraintBottom_toTopOf="@id/tv_created_by"
                app:layout_constraintDimensionRatio="1,1" />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--    </ScrollView>-->
    <!--    -->

</androidx.constraintlayout.widget.ConstraintLayout>