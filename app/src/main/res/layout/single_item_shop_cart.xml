<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_12"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_80"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_44"
        style="@style/guideline_simple_style_horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_v_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_80"
        android:layout_margin="2dp"
        android:background="#AAB2DD"
        app:cardCornerRadius="8dp"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:src="@drawable/logo_geek_vhite_background__" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_black"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_v_image"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_80"
        tools:text="Magic robe" />


    <Button
        android:id="@+id/btn_minus"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:autoSizeTextType="uniform"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_black"
        android:text="—"
        android:textColor="@color/grey"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_40"
        app:layout_constraintStart_toEndOf="@id/card_v_image"
        app:layout_constraintTop_toTopOf="@id/card_v_image" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:id="@+id/lin_lay_count"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_40"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_80">

        <TextView
            style="@style/tv_price_count_shop_cart"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="к-сть"/>

        <TextView
            style="@style/tv_price_count_shop_cart"
            android:layout_weight="1"
            android:id="@+id/tv_item_count"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:id="@+id/lin_lay_price"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_60"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_80">

        <TextView
            style="@style/tv_price_count_shop_cart"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="сума"/>

        <TextView
            style="@style/tv_price_count_shop_cart"
            android:layout_weight="1"
            android:id="@+id/tv_item_sum"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="2000"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:autoSizeTextType="uniform"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_black"
        android:text="+"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/card_v_image"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_40"
        app:layout_constraintStart_toEndOf="@id/card_v_image"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_44" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_delete"
        app:layout_constraintDimensionRatio="1,2"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_delete_24"/>

    <TextView
        android:id="@+id/tv_price_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/jost_variable"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@id/card_v_image"
        app:layout_constraintEnd_toEndOf="@id/card_v_image"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_80"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="200 $" />


</androidx.constraintlayout.widget.ConstraintLayout>