<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_settings_style">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="guideline_simple_style_horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guideline_simple_style_vert">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_viev_on_start_screen">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="text_viev_ans_style">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="image_on_start_screen">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="text_checkbox_style">
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/opensans_extra_bold</item>
        <item name="textAllCaps">true</item>
        <item name="singleLine">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_result_screen_style">
        <item name="fontFamily">@font/opensans_extra_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintDimensionRatio">1,3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

    </style>

</resources>